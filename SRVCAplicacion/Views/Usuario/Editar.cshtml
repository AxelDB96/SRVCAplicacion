@model Usuario

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Nuevo Usuario</h2>
    
        <form method="post" enctype="multipart/form-data">
           
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>

                <div class="col-sm-8">
                    <input class="form-control-plaintext" asp-for="id" value="@ViewData["id"]" readonly />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Usuario</label>
                
                <div class="col-sm-8">
                    <input class="form-control" asp-for="usu" value="@ViewData["usu"]" />
                    <span asp-validation-for="usu" class="text-danger"></span>
                </div>
            </div>    

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Contraseña</label>

                <div class="col-sm-8">
                    <input class="form-control" asp-for="pass" value="@ViewData["pass"]" />
                    <span asp-validation-for="pass" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="email" value="@ViewData["email"]" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>

            @* <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
            <img src="@Url.Content("~/usuarios/" + Model.ImgPath)" width="150" />
            </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Foto</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Img" value="@ViewData["email"]" />
                    <span asp-validation-for="Img" class="text-danger"></span>
                </div>
            </div>
 *@
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Usuario" asp-action="Index" role="button">
                        Cancelar
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>